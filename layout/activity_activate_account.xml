<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B2A4E"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:text="Activate Account"
            android:textColor="#FFD700"
            android:textSize="28sp"
            android:layout_marginBottom="24dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- ID Field -->
        <EditText
            android:id="@+id/etId"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="GR No / Enrollment / Emp Code"
            android:background="@drawable/input_bg"
            android:paddingHorizontal="16dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#BBBBBB"
            android:layout_marginBottom="16dp" />

        <!-- DOB -->
        <EditText
            android:id="@+id/etDob"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="DOB (ddmmyyyy)"
            android:inputType="number"
            android:background="@drawable/input_bg"
            android:textColor="#FFFFFF"
            android:textColorHint="#BBBBBB"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Phone -->
        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Phone Number (with +91)"
            android:inputType="phone"
            android:background="@drawable/input_bg"
            android:textColor="#FFFFFF"
            android:textColorHint="#BBBBBB"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Send OTP Button -->
        <Button
            android:id="@+id/btnSendOtp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Send OTP"
            android:textColor="#0B2A4E"
            android:textStyle="bold"
            android:background="@drawable/btn_gold"
            android:layout_marginBottom="20dp"/>

        <!-- OTP -->
        <EditText
            android:id="@+id/etOtp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter OTP"
            android:inputType="number"
            android:background="@drawable/input_bg"
            android:textColor="#FFFFFF"
            android:textColorHint="#BBBBBB"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="20dp" />

        <!-- Verify Button -->
        <Button
            android:id="@+id/btnVerifyOtp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Verify and Activate"
            android:textColor="#0B2A4E"
            android:background="@drawable/btn_gold"
            android:textStyle="bold"/>

    </LinearLayout>

</ScrollView>
